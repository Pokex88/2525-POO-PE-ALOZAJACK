import tkinter as tk
from tkinter import messagebox

# Función para agregar datos a la lista
def agregar_dato():
    dato = entrada.get()
    if dato.strip() != "":
        lista_datos.insert(tk.END, dato)  # Agrega al final de la lista
        entrada.delete(0, tk.END)  
    else:
        messagebox.showwarning("Advertencia", "El campo de texto está vacío")

# Función para limpiar datos
def limpiar_datos():
    seleccion = lista_datos.curselection()
    if seleccion:
        lista_datos.delete(seleccion)  # Borra solo el seleccionado
    else:
        lista_datos.delete(0, tk.END)  

# Crear ventana principal
ventana = tk.Tk()
ventana.title("Gestor de Datos - Ejemplo GUI")
ventana.geometry("400x300")

# Etiqueta
etiqueta = tk.Label(ventana, text="Ingrese un dato:", font=("Arial", 12))
etiqueta.pack(pady=5)

# Campo de texto
entrada = tk.Entry(ventana, width=30, font=("Arial", 12))
entrada.pack(pady=5)

# Botón Agregar
boton_agregar = tk.Button(ventana, text="Agregar", command=agregar_dato, bg="lightgreen")
boton_agregar.pack(pady=5)

# Lista para mostrar datos
lista_datos = tk.Listbox(ventana, width=40, height=8, font=("Arial", 10))
lista_datos.pack(pady=5)


boton_limpiar = tk.Button(ventana, text="Limpiar", command=limpiar_datos, bg="lightcoral")
boton_limpiar.pack(pady=5)

# Ejecutar aplicación
ventana.mainloop()
